    'Kopeevegor@gmail.com')


@bot.message_handler(content_types=['text'])
def obrabotka(message):
    if message.text == '–°–µ–≥–æ–¥–Ω—è':
        markup = types.ReplyKeyboardMarkup(resize_keyboard=True, row_width=2)
        button1 = types.KeyboardButton('–û–±–µ–¥ üç≤')
        button2 = types.KeyboardButton('–ó–∞–≤—Ç—Ä–∞–∫ üßÜ')
        button3 = types.KeyboardButton('–ù–∞–∑–∞–¥ ‚Ü©Ô∏è')

        markup.add(button1, button2)
        markup.add(button3)

        bot.send_message(message.chat.id, '–í—ã–±–µ—Ä–∏—Ç–µ —Ä–∞—Ü–∏–æ–Ω üç±', reply_markup=markup)

    elif message.text == '–û–±–µ–¥ üç≤':
        bot.send_photo(message.chat.id, 'https://mykaleidoscope.ru/x/uploads/posts/2022-09/1663686606_11-'
        'mykaleidoscope-ru-p-borshch-so-smetanoi-oboi-15.jpg')

        time.sleep(0.4)

        bot.send_message(message.chat.id, '–û–ø–∏—Å–∞–Ω–∏–µ:\n'
        '1. –°—É–ø - –ì—É—Å—Ç–æ–π —Å—ã—Ç–Ω—ã–π –±–æ—Ä—â\n'
        '2. –ì–æ—Ä—è—á–µ–µ - –ê–∑–∏–∞—Ç—Å–∫–∞—è –ª–∞–ø—à–∞ —Å –≥–æ–≤—è–¥–∏–Ω–æ–π\n'
        '3. –ù–∞–ø–∏—Ç–æ–∫ - –ú–æ—Ä—Å –ª–µ—Å–Ω—ã–µ —è–≥–æ–¥—ã\n'
        '4. –•–ª–µ–± —Ä–∂–µ–Ω–æ–π\n'
        '5. –Ø–±–ª–æ–∫–æ')

    elif message.text == '–ó–∞–≤—Ç—Ä–∞–∫ üßÜ':
        bot.send_photo(message.chat.id, 'https://simf-klin-bolnica.ru/wp-content/uploads/4/e/a/4ea2d461fe'
        '1a11f795cbd9d8a523f9c6.jpeg')

        time.sleep(0.4)

        bot.send_message(message.chat.id, '–û–ø–∏—Å–∞–Ω–∏–µ:\n'
        '1. –û–≤—Å—è–Ω–∞—è –∫–∞—à–∞ –Ω–∞ –º–æ–ª–æ–∫–µ —Å —è–≥–æ–¥–∞–º–∏\n'
        '2. –•–ª–µ–± - –±–∞—Ç–æ–Ω\n'
        '3. –ù–∞–ø–∏—Ç–æ–∫ - –î—Ä–µ–≤–µ—Å–Ω—ã–π —á–∞–π —Å –∫—É—Å–æ—á–∫–∞–º–∏ –ª–∏–º–æ–Ω–∞\n'
        '4. –ë–∞–Ω–∞–Ω')

    elif message.text == '–ù–∞–∑–∞–¥ ‚Ü©Ô∏è':
        starter(message)

    elif message.text == '–ó–∞–≤—Ç—Ä–∞':
        markup = types.ReplyKeyboardMarkup(resize_keyboard=True, row_width=2)
        button1 = types.KeyboardButton('–û–±–µ–¥ üç≤')
        button2 = types.KeyboardButton('–ó–∞–≤—Ç—Ä–∞–∫ üßÜ')
        button3 = types.KeyboardButton('–ù–∞–∑–∞–¥ ‚Ü©Ô∏è')

        markup.add(button1, button2)
        markup.add(button3)

        bot.send_message(message.chat.id, '–í—ã–±–µ—Ä–∏—Ç–µ —Ä–∞—Ü–∏–æ–Ω üç±', reply_markup=markup)

    elif message.text == '–ù–∞ —Å–∞–π—Ç –≥–∏–º–Ω–∞–∑–∏–∏':
        webbrowser.open('https://–≥–∏–º–Ω–∞–∑–∏—è47.–µ–∫–∞—Ç–µ—Ä–∏–Ω–±—É—Ä–≥.—Ä—Ñ')
        bot.send_message(message.chat.id, 'https://–≥–∏–º–Ω–∞–∑–∏—è47.–µ–∫–∞—Ç–µ—Ä–∏–Ω–±—É—Ä–≥.—Ä—Ñ')


bot.polling(none_stop=True)
