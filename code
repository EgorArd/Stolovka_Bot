import telebot
import time
import datetime
import webbrowser

from telebot import types

date = datetime.datetime.today().weekday()

bot = telebot.TeleBot('6937379743:AAEmyDjUZkLBuJn_g6J9QEa-iMQusheX2zg')


@bot.message_handler(commands=['start'])
def start(message):

    bot.send_message(message.chat.id, '–ü—Ä–∏–≤–µ—Ç —è —Ç–≤–æ–π —Å—Ç–æ–ª–æ–≤–∫–∞ –±–æ—Ç, —è —Å–æ–∑–¥–∞–Ω –¥–ª—è —Ç–æ–≥–æ'
    ' —á—Ç–æ–±—ã —Ç—ã –∑–Ω–∞–ª, —á—Ç–æ —Å–µ–≥–æ–¥–Ω—è –±—É–¥—É—Ç –¥–∞–≤–∞—Ç—å –≤ —Å—Ç–æ–ª–æ–≤–æ–π')

    markup = types.ReplyKeyboardMarkup(resize_keyboard=True, row_width=2)

    button = types.KeyboardButton('–°–µ–≥–æ–¥–Ω—è')
    button1 = types.KeyboardButton('–ó–∞–≤—Ç—Ä–∞')
    button2 = types.KeyboardButton('–ù–∞ —Å–∞–π—Ç –≥–∏–º–Ω–∞–∑–∏–∏')

    markup.add(button, button1)
    markup.add(button2)

    time.sleep(2)

    bot.send_message(message.chat.id, '–í—ã–±–µ—Ä–∏—Ç–µ –¥–µ–Ω—å: ', reply_markup=markup)


def starter(message):

    markup = types.ReplyKeyboardMarkup(resize_keyboard=True, row_width=2)

    button = types.KeyboardButton('–°–µ–≥–æ–¥–Ω—è')
    button1 = types.KeyboardButton('–ó–∞–≤—Ç—Ä–∞')
    button2 = types.KeyboardButton('–ù–∞ —Å–∞–π—Ç –≥–∏–º–Ω–∞–∑–∏–∏')

    markup.add(button, button1)
    markup.add(button2)

    time.sleep(2)

    bot.send_message(message.chat.id, '–í—ã–±–µ—Ä–∏—Ç–µ –¥–µ–Ω—å: ', reply_markup=markup)


